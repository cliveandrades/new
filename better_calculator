num1 = float(input("Enter first number : "))
op = input("Enter a operator + - / or * : ")
num2 = float(input("Enter second number"))

if op == "+":
    print(num1 + num2)
    op = "Addition Function"
elif op == "-":
    print(num1 - num2)
    op = "Subtraction Function"
elif op == "/":
    print(num1 / num2)
    op = "Division Function"
else:
    print(num1 * num2)
    op = "Multiplication Function"

print("You chose", op)
